<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:background="#ff0000"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/leftv"
            android:paddingBottom="0dp"
            android:paddingLeft="13dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:text=" 首页 "
            android:textColor="#ffffff"
            android:textSize="20sp" >
        </Button>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部菜品"
                android:textColor="#fff"
                android:textSize="20sp" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_margin="0dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="0dp" >

        <RadioGroup
            android:id="@+id/allcaiping"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/allshangjia"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/allcaipingbg"
                android:button="@null"
                android:gravity="center"
                android:text="所有商家"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#fff" />

            <RadioButton
                android:id="@+id/caipingfenlei"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/allcaipingbg"
                android:button="@null"
                android:gravity="center"
                android:text="菜品分类"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#fff" />

            <RadioButton
                android:id="@+id/zhinengpaixu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/allcaipingbg"
                android:button="@null"
                android:gravity="center"
                android:text="智能排序"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />
        </RadioGroup>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="0dp"
        android:background="#EBEBEB"
        android:padding="0dp" />
    
    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:overScrollMode="never" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" >
                <LinearLayout
                    android:id="@+id/body"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal" >
                </LinearLayout>

                <Button
                    android:id="@+id/yuxiaoyousi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/yuxiaoyousi"
                    android:paddingTop="0dp"
                    android:layout_marginTop="0dp"
                    android:paddingLeft="10dp">
                </Button>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#EEE0E5" />

               <Button
                    android:id="@+id/tudou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/tudou"
                    android:paddingLeft="10dp">
                </Button>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#EEE0E5" />

                <Button
                    android:id="@+id/beijingkaoya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/beijingkaoya"
                    android:paddingLeft="10dp">
                </Button>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#EEE0E5" />

                <Button
                    android:id="@+id/shijinchaofan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/shijinchaofan"
                    android:paddingLeft="10dp">
                </Button>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#EEE0E5" />

                <Button
                    android:id="@+id/jinzhengurousi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/jinzhengurousi"
                    android:paddingLeft="10dp">
                </Button>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#EEE0E5" />

                <Button
                    android:id="@+id/suannibairou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/suannibairou"
                    android:paddingLeft="10dp">
                </Button>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#EEE0E5" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>