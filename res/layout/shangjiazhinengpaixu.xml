<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="75dp"
        android:background="#50000000"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="2" >

        <RadioGroup
            android:id="@+id/zhinengpaixu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#5000" />

            <RadioButton
                android:id="@+id/jiagecongdidaogao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listdialogbg"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="价格从低到高"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#5000" />

            <RadioButton
                android:id="@+id/jiagecnggaodaodi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listdialogbg"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="价格从高到低"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#5000" />

            <RadioButton
                android:id="@+id/haopingconggaodaodi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listdialogbg"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="好评从高到低"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#5000" />

            <RadioButton
                android:id="@+id/julicongjindaoyuan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listdialogbg"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="距离从近到远"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#5000" />

            <RadioButton
                android:id="@+id/congkongxiandaomanglu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listdialogbg"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="从空闲到忙碌"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#5000" />

            <CheckBox
                android:id="@+id/shifouyingye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:text="是否营业" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>